<div class="container-card">
  <div class="cards">
    <% @dinosaurs.each do |dino| %>
    <%= link_to dinosaur_path(dino) do %>
      <div class="card-dino">
        <%= cl_image_tag dino.photo.key, crop: :fill%>
        <div class="card-dino-infos">
          <div>
            <h2><%= dino.name%></h2>
              <ul>
                <li><strong>Species : </strong><%= dino.species%></li>
                <li><strong>Character : </strong><%= dino.character%></li>
              </ul>
          </div>
          <div>
          <h2 id="card-dino-pricing">â‚¬<%= dino.price%>/day</h2>
            <ul class="list-inline">
              <li class="list-inline-item"><i class="fa-regular fa-heart"></i></li>
              <li class="list-inline-item"><i class="fa-solid fa-stars"><%= dino.review%></i></li>
            </ul>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
</div>

  <div class="btn-new w-25">
  <% if policy(Dinosaur).new? %>
<%= link_to "New Dinosaur", new_dinosaur_path, class: "btn-new" %>
<% end %>
</div>
